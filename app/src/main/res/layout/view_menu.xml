<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/left_menu_bg">

    <LinearLayout
        android:id="@+id/layout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <we.video.wevideo.ui.support.round.RoundImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            app:type="0"
            android:layout_height="50dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/title_small" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_all"
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_below="@+id/layout_icon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_menu_all"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_normal" />

    <Button
        android:id="@+id/btn_set"
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_all"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_menu_set"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/title_normal" />

</RelativeLayout>