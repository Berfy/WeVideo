<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:width="10dp"
                android:height ="10dp"
                android:angle="270"
                android:centerColor="@color/large_gray"
                android:centerY="0.45"
                android:endColor="@color/large_gray"
                android:startColor="@color/large_gray" />
            <stroke android:width="5dp" android:color="@color/large_gray" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:width="10dp"
                    android:height ="10dp"
                    android:angle="270"
                    android:centerColor="#FF75BC32"
                    android:centerY="0.45"
                    android:endColor="#FF75BC32"
                    android:startColor="#FF75BC32" />
                <stroke android:width="5dp" android:color="#FF75BC32" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:width="10dp"
                    android:height ="10dp"
                    android:angle="270"
                    android:centerColor="@color/white"
                    android:centerY="0.45"
                    android:endColor="@color/white"
                    android:startColor="@color/white" />
            </shape>
        </clip>
    </item>
</layer-list>